{
  "name": "nowlive",
  "displayName": "Now Live",
  "version": "1.2.1",
  "private": true,
  "description": "Instantly check which of your favorite Twitch streamers are live right from your favorite browser",
  "repository": "https://github.com/jewlexx/NowLive",
  "license": "MIT",
  "author": "Juliette Cordor",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:wasm && bun run propegate:version && bun run clean && parcel build manifest.json --no-source-maps",
    "build:wasm": "cd packages/image-helpers && bun run build",
    "cargo": "cd image-helpers && cargo",
    "clean": "rimraf dist",
    "dev": "parcel watch manifest.json",
    "fmt": "prettier --write ./src/*/**.{ts,tsx} --ignore-path .gitignore",
    "fmt:check": "prettier --check ./src/*/**.{ts,tsx} --ignore-path .gitignore",
    "icons": "node scripts/icons.js",
    "lint": "eslint ./src/*/**.{ts,tsx}",
    "lint:fix": "eslint ./src/*/**.{ts,tsx} --fix",
    "propegate:version": "node scripts/update-version.js",
    "start:firefox": "web-ext run --source-dir ./dist/"
  },
  "browserslist": "last 2 Chrome versions, last 2 Firefox versions",
  "dependencies": {
    "@fontsource/noto-sans": "5.1.1",
    "fast-average-color": "9.4.0",
    "framer-motion": "12.4.7",
    "image-helpers": "workspace:*",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.5.0",
    "react-is": "19.0.0",
    "styled-components": "6.1.15",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@parcel/config-default": "2.13.3",
    "@parcel/config-webextension": "2.13.3",
    "@parcel/transformer-inline-string": "2.13.3",
    "@parcel/transformer-raw": "2.13.3",
    "@types/chrome": "0.0.306",
    "@types/firefox-webext-browser": "120.0.4",
    "@types/node": "22.13.5",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "browserslist": "4.24.4",
    "cross-env": "7.0.3",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-compat": "6.0.2",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-compiler": "^19.0.0-beta-e1e972c-20250221",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "^16.0.0",
    "install-peers": "1.0.4",
    "parcel": "2.13.3",
    "prettier": "3.5.2",
    "process": "0.11.10",
    "rimraf": "6.0.1",
    "sharp": "0.33.5",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.25.0",
    "wasm-pack": "0.13.1",
    "web-ext": "8.4.0"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@swc/core",
    "core-js",
    "image-helpers",
    "install-peers",
    "lmdb",
    "msgpackr-extract",
    "sharp",
    "spawn-sync",
    "wasm-pack"
  ]
}