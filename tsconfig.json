{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "module": "CommonJS",
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "importHelpers": true,
    "removeComments": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}